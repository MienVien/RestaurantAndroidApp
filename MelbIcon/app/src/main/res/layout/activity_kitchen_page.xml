<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kitchen.Kitchen_page">

    <ImageButton
        android:id="@+id/allMenu"
        android:layout_width="487dp"
        android:layout_height="58dp"
        android:layout_marginBottom="637dp"
        android:layout_marginEnd="532dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/all_menu" />

    <ImageButton
        android:id="@+id/completedOrder"
        android:layout_width="529dp"
        android:layout_height="57dp"
        android:layout_marginBottom="637dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/allMenu"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/completed" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="1008dp"
        android:layout_height="563dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allMenu" />

    <ImageButton
        android:id="@+id/backBT"
        android:layout_width="172dp"
        android:layout_height="68dp"
        android:layout_marginEnd="847dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:srcCompat="@mipmap/back" />

    <ImageButton
        android:id="@+id/addRemoveBT"
        android:layout_width="623dp"
        android:layout_height="73dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backBT"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:srcCompat="@mipmap/kitchen" />

    <ImageButton
        android:id="@+id/refreshBT"
        android:layout_width="217dp"
        android:layout_height="70dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addRemoveBT"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:srcCompat="@mipmap/refresh" />
</android.support.constraint.ConstraintLayout>