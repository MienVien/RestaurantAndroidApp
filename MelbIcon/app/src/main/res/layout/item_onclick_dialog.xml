<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemOnClick">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="325dp"
        android:layout_height="71dp"
        android:layout_alignBottom="@+id/divider2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:text="Item Title"
        android:textSize="25sp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="67dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@android:color/background_dark"
        android:foreground="@android:color/darker_gray"
        android:visibility="visible"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="84dp" />

    <ListView
        android:id="@+id/ingredientListView"
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="86dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addNotes"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:padding="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:paddingStart="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/backiconblue" />

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="0dp"
            android:paddingEnd="20dp"
            android:paddingStart="100dp"
            tools:layout_editor_absoluteX="208dp">

            <Button
                android:id="@+id/decreaseBtn"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textAlignment="center"
                android:textSize="60sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/amountTextView"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textAlignment="center"
                android:textFontWeight="20"
                android:textSize="60sp" />

            <Button
                android:id="@+id/increaseBtn"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textAlignment="center"
                android:textSize="60sp"
                tools:layout_editor_absoluteX="190dp"
                tools:layout_editor_absoluteY="0dp" />
        </LinearLayout>

        <Button
            android:id="@+id/addBtn"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#85b200"
            android:text="Add to Order"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="656dp"
            tools:layout_editor_absoluteY="0dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/addNotes"
        android:layout_width="609dp"
        android:layout_height="123dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="Add Notes..."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/titleTextView"
        android:layout_marginEnd="25dp"
        android:text="Price * Quantity"
        android:textSize="25sp" />
</RelativeLayout>