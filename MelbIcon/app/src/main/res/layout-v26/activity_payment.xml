    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:layout_marginStart="460dp"
        android:text="GRAND TOTAL:"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="65dp"
        android:text="incl. GST"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentRecyclerView" />

    <LinearLayout
        android:id="@+id/p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/andrpay"
            android:layout_width="176dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="#00ffffff"
            android:contentDescription="@string/andrpay"
            android:paddingHorizontal="15px"
            android:scaleType="fitCenter"
            android:src="@mipmap/androidpay" />

        <ImageButton
            android:id="@+id/paypal"
            android:layout_width="303dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:contentDescription="@string/paypal"
            android:paddingHorizontal="15px"
            android:scaleType="fitCenter"
            android:src="@mipmap/paypal" />

        <ImageButton
            android:id="@+id/visa"
            android:layout_width="200dp"
            android:layout_height="87dp"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:contentDescription="@string/visa"
            android:paddingHorizontal="15px"
            android:scaleType="fitCenter"
            android:src="@mipmap/visa" />


        <ImageButton
            android:id="@+id/cash"
            android:layout_width="185dp"
            android:layout_height="104dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="#00ffffff"
            android:contentDescription="@string/cash"
            android:paddingHorizontal="15px"
            android:scaleType="fitCenter"
            android:src="@mipmap/cashstack" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/paymentRecyclerView"
        android:layout_width="1038dp"
        android:layout_height="347dp"
        android:layout_marginBottom="235dp"
        android:background="#FFFFFF"
        android:fillViewport="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">
    </android.support.v7.widget.RecyclerView>


    <EditText
        android:id="@+id/editText"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:inputType="number"
        android:text="$ 2000.00"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/paymentRecyclerView" />

</android.support.constraint.ConstraintLayout>